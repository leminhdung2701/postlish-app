<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".activity.AccountActivity"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:textColor="@color/colorDark"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Tài khoản"
        android:id="@+id/textview_account"/>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:id="@+id/view_account"
        android:background="@color/colorDark"
        android:layout_below="@+id/textview_account"/>


    -<LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/linear_account"
        android:layout_below="@+id/view_account"
        android:layout_marginTop="10dp">


    -<LinearLayout
        android:orientation="horizontal"
        android:layout_height="120dp"
        android:layout_width="match_parent">


    -<LinearLayout
        android:orientation="vertical"
        android:layout_height="120dp"
        android:layout_width="100dp">

    <ImageButton
        android:scaleType="fitXY"
        android:id="@+id/img_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:background="@color/colorWhite"
        android:src="@drawable/account" />

    <Button
        android:id="@+id/button_changeImg"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:text="Lưu thay đổi"
        android:textSize="8sp" />

</LinearLayout>


    -<LinearLayout android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" android:weightSum="2">

    <TextView android:layout_height="match_parent" android:layout_width="match_parent" android:text="Tài khoản thường" android:id="@+id/text_role" android:layout_marginTop="10dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_gravity="center" android:singleLine="true" android:layout_weight="1" android:paddingTop="5dp" android:paddingLeft="30dp"/>

    <TextView
        android:id="@+id/text_premium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:paddingLeft="30dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="Tìm hiểu về Premium" />

</LinearLayout>

</LinearLayout>

    <TextView android:layout_height="60dp" android:layout_width="match_parent" android:textColor="@color/colorDark" android:textSize="15sp" android:textStyle="bold" android:text="Thông tin tài khoản" android:layout_marginTop="10dp" android:paddingTop="25dp" android:paddingLeft="12dp" android:textAllCaps="true"/>


    -<LinearLayout android:orientation="horizontal" android:layout_height="50dp" android:layout_width="match_parent">

    <TextView android:layout_height="match_parent" android:layout_width="120dp" android:textStyle="bold" android:text="Id " android:paddingTop="12dp" android:paddingLeft="12dp"/>

    <TextView android:layout_height="match_parent" android:layout_width="250dp" android:text="0123456789" android:id="@+id/textview_userid" android:singleLine="true" android:paddingTop="12dp" android:paddingLeft="60dp" android:password="true"/>

    <Button

        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/btn_account_id"
        android:background="@color/colorWhite"
        style="?android:attr/borderlessButtonStyle"
        android:drawableStart="@drawable/right_24"/>

</LinearLayout>


    -<LinearLayout android:orientation="horizontal" android:layout_height="50dp" android:layout_width="match_parent">

    <TextView android:layout_height="match_parent" android:layout_width="120dp" android:textStyle="bold" android:text="Tên đăng nhập " android:paddingTop="12dp" android:paddingLeft="12dp"/>

    <TextView android:layout_height="match_parent" android:layout_width="250dp" android:text="trandinhdai@hus.edu.vn" android:id="@+id/textview_tendangnhap" android:singleLine="true" android:paddingTop="12dp" android:paddingLeft="60dp"/>

    <Button android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/btn_account_user" android:background="@color/colorWhite" style="?android:attr/borderlessButtonStyle" android:drawableStart="@drawable/right_24"/>

</LinearLayout>


    -<LinearLayout android:orientation="horizontal" android:layout_height="50dp" android:layout_width="match_parent">

    <TextView android:layout_height="match_parent" android:layout_width="120dp" android:textStyle="bold" android:text="Mât khẩu " android:paddingTop="12dp" android:paddingLeft="12dp"/>

    <TextView android:layout_height="match_parent" android:layout_width="250dp" android:text="fkhfdsf" android:id="@+id/textview_matkhau" android:singleLine="true" android:paddingTop="12dp" android:paddingLeft="60dp" android:password="true"/>

    <Button android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/btn_account_pw" android:background="@color/colorWhite" style="?android:attr/borderlessButtonStyle" android:drawableStart="@drawable/right_24"/>

</LinearLayout>


    -<LinearLayout android:orientation="horizontal" android:layout_height="50dp" android:layout_width="match_parent">

    <TextView android:layout_height="match_parent" android:layout_width="120dp" android:textStyle="bold" android:text="Tên tài khoản" android:paddingTop="12dp" android:paddingLeft="12dp"/>

    <TextView android:layout_height="match_parent" android:layout_width="250dp" android:text="Đình Đại" android:id="@+id/textview_tentaikhoan" android:singleLine="true" android:paddingTop="12dp" android:paddingLeft="60dp"/>

    <Button android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/btn_account_name" android:background="@color/colorWhite" style="?android:attr/borderlessButtonStyle" android:drawableStart="@drawable/right_24"/>

</LinearLayout>


    -<LinearLayout android:orientation="horizontal" android:layout_height="50dp" android:layout_width="match_parent">

    <TextView android:layout_height="match_parent" android:layout_width="120dp" android:textStyle="bold" android:text="Giới tính " android:paddingTop="12dp" android:paddingLeft="12dp"/>

    <TextView android:layout_height="match_parent" android:layout_width="250dp" android:text="Nữ" android:id="@+id/textview_gioitinh" android:singleLine="true" android:paddingTop="12dp" android:paddingLeft="60dp"/>

    <Button android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/btn_account_sex" android:background="@color/colorWhite" style="?android:attr/borderlessButtonStyle" android:drawableStart="@drawable/right_24"/>

</LinearLayout>


    -<LinearLayout android:orientation="horizontal" android:layout_height="50dp" android:layout_width="match_parent">

    <TextView android:layout_height="match_parent" android:layout_width="120dp" android:textStyle="bold" android:text="Ngày sinh " android:paddingTop="12dp" android:paddingLeft="12dp"/>

    <TextView android:layout_height="match_parent" android:layout_width="250dp" android:text="01/01/2000" android:id="@+id/textview_ngaysinh" android:singleLine="true" android:paddingTop="12dp" android:paddingLeft="60dp"/>

    <Button android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/btn_account_date" android:background="@color/colorWhite" style="?android:attr/borderlessButtonStyle" android:drawableStart="@drawable/right_24"/>

</LinearLayout>

    <TextView android:layout_height="60dp" android:layout_width="match_parent" android:textColor="@color/colorDark" android:textSize="15sp" android:textStyle="bold" android:text="Quản lý tài khoản" android:layout_marginTop="15dp" android:paddingTop="25dp" android:paddingLeft="12dp" android:textAllCaps="true"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:text="Vô hiệu hóa tài khoản" android:id="@+id/btn_vohieuhoa" style="?android:attr/borderlessButtonStyle" android:textAllCaps="false" android:textAlignment="textStart" android:padding="@dimen/menu_margin"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:textColor="@color/colorRed" android:text="Xóa tài khoản" android:id="@+id/button_deleteAccount" style="?android:attr/borderlessButtonStyle" android:textAllCaps="false" android:textAlignment="textStart" android:padding="@dimen/menu_margin"/>

</LinearLayout>

</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
