<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".update_account.PasswordActivity">

    //Vl

    <LinearLayout
        android:id="@+id/linear_user"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_user"
            android:layout_width="100dp"
            android:drawableLeft="@drawable/left_24"
            android:text="Trở lại"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorDark"
            android:paddingLeft="65dp"
            android:gravity="center_vertical"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:text="Đổi mật khẩu"/>

        <Button
            android:textAllCaps="false"
            android:id="@+id/btn_user_save"
            android:layout_width="match_parent"
            android:text="Lưu"
            style="?android:attr/borderlessButtonStyle"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <View
        android:background="#80CCCCCC"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"/>

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="10sp"
        android:text="MẬT KHẨU"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:textColor="@color/colorDark"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:passwordToggleEnabled="true"
        >


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edt_user"
            android:singleLine="true"
            android:text="2152df5f5qwww"
            android:textColorHint="@color/colorGray"
            android:paddingTop="10dp"
            android:textSize="15sp"
            android:password="true"
            android:hint="Nhập tên mật khẩu mới"
            android:background="@drawable/vuong"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="5dp"
        android:id="@+id/etPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:passwordToggleEnabled="true"
      >


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edt_user_again"
            android:singleLine="true"
            android:text="2152df5f5qwww"
            android:paddingTop="10dp"
            android:textSize="15sp"
            android:password="true"
            android:hint="Nhập lại mật khẩu"
            android:background="@drawable/vuong"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:textColorHint="@color/colorGray"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>
